<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<system.webServer>
		<handlers>
			<add name="iisnode" path="app.js" verb="*" modules="iisnode" />
		</handlers>
		<rewrite>
			<rules>
				<!-- ✅ No reescribir archivos estáticos -->
				<rule name="StaticContent" stopProcessing="true">
					<match url=".*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map|json|html)$" />
					<action type="None" />
				</rule>
				<!-- ✅ Reescribir solo rutas dinámicas -->
				<rule name="DynamicContent">
					<match url=".*" />
					<action type="Rewrite" url="app.js" />
				</rule>
			</rules>
		</rewrite>
	</system.webServer>
</configuration>
